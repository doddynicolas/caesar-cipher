pipeline {
    agent any
    
      tools{
        gradle 'Gradle1'
    }
    
    stages {
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'gradle test'
           }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'ls -ali'
                sh 'gradle clean build'      
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'ps -aux'
                sh 'gradle clean build'
            }
        }
    }
}

