pipeline {
    agent any
    
      tools{
        gradle 'Gradle1'
    }
    
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'doddy'
                sh './gradlew tasks --all'
           }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'ls -ali'
                sh './gradlew clean build'      
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'ps -aux'
                sh './gradlew clean build'
            }
        }
    }
}

