pipeline {
    agent any
    
    
    stages {
        stage('Preparing gradle') {
            steps {
                echo 'Testing...'
                sh 'chmod +x gradlew'
           }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh './gradlew test'
           }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'ls -ali'
                sh 'gradle clean build'      
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'ps -au'
                sh 'gradle clean build'
            }
        }
    }
}

